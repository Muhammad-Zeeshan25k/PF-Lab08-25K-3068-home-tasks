#include <stdio.h>
int image[4][4]={{1, 0, 1, 0},{0, 1, 0, 1},{1, 1, 0, 0},{0, 0, 1, 1}};
int whitespaces=0;

    void invert(int image[4][4],int i,int j){
        if (image[i][j]==0){
            image[i][j]=1;
        }
        else {
        image[i][j]=0;}
    }
    void whitespace(int image[4][4],int whitespaces){
        
        for (int i=0;i<4;i++){
            for (int j=0;j<4;j++){
            if (image[i][j]==1){
                whitespaces+=1;
            }
        }}
        printf("The number of white spaces are :%d",whitespaces);
    }
    int main(){
    
    for (int i=0;i<4;i++){
        for (int j=0;j<4;j++){
            printf("%d",image[i][j]);}
            printf("\t");
            for (int k=0;k<4;k++){
                invert(image,i,k);
                printf("%d",image[i][k]);
            }
        printf("\n");}
        whitespace(image,whitespaces);
        return 0;
    }
